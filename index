  <script>
    // Reveal on scroll
    const io=new IntersectionObserver((entries)=>{entries.forEach(e=>{if(e.isIntersecting){e.target.classList.add('is-visible');io.unobserve(e.target)}})},{threshold:.15});
    document.querySelectorAll('[data-reveal]').forEach(el=>io.observe(el));
    // Dark mode
    const mode=document.getElementById('modeToggle');
    if(mode){mode.addEventListener('click',()=>{document.documentElement.classList.toggle('dark');mode.textContent=document.documentElement.classList.contains('dark')?'Light':'Dark'})}
  </script>
